<section>
  <div class="container">
    <div class="row mt-4 pl-5">
      <a href="admin/add-products"> <button type="button" class="btn btn-primary btn-lg ml-auto ">Add products</button></a>
    </div>
    <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Price</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td><img style="height: 50px; width: 50px;"  src="/images/{{this._id}}.jpg" alt=""></td>
      <td><a href="edit-product" class="btn btn-primary"> Edit</a>
     <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you sure to delete{{this.name}}')">Delete</a>



    </tr>
   
  </tbody>
  {{/each}}
</table>
  </div>
</section>
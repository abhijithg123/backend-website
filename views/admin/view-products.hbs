<section>
  <table class="table">
    <div class="row mt-5">
      <a href="admin/add-products"><button type="button" class="btn btn-primary btn-lg ml-auto"> Add button</button></a>
    </div>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img src="{{this.image}}" alt="" style="width: 50px;height: 50px;" ></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</section>
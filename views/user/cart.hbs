<section>
    <div class="container p-3">
         <table class="table">
    
  <thead>
    <tr>
      <th scope="col">Sl.no</th>
      <th scope="col">Item</th>
      <th scope="col">quantity</th>
      <th scope="col"></th>
      
    </tr>
  </thead>
  {{#each products}}
  <tbody>
    <tr>
      {{#each product }}
      <td><img style="width: 50px;height:50px" src="/images/{{this._id}}.jpg" alt=""></td>
      <td>{{this.name}}</td>
      {{/each}}
      <td>
        <button type="button" class="btn btn-secondary increment-btn" data-id="{{this._id}}" onclick="incrementButton()">+</button>
        <button type="button" class="btn btn-light quantity-btn">{{this.quantity}}</button>
        <button type="button" class="btn btn-secondary decrement-btn" data-id="{{this._id}}">-</button>
      <td><button type="button" class="btn btn-danger">remove</button></td>
      </td>
    </tr>
    
  </tbody>
  {{/each}}
</table>
    </div>
   
</section>
